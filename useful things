## Remove a variable that you no longer need
rm(variable)

## Text into columns - https://rdrr.io/cran/tidyr/man/separate.html
separate(data, col, into, sep = "[^[:alnum:]]+", remove = TRUE,
  convert = FALSE, extra = "warn", fill = "warn", ...)
  # e.g.
adobe <- separate(adobe, dateT, c("ActivityDt", "ActivityHour"), sep = ", Hour", remove = TRUE)

  
## NAs into 0s
df[is.na(df)] <- 0  

## Parsing dates
library(lubridate)
parse_date_time(bi$ActivityDt, orders = "d%/%m/%Y")    
  # another option but it doesnt always work
as.Date(bi$ActivityDt, format = "d%/%m/%Y")
